package com.spacecombat;

public abstract class GenericText {
	public abstract void create(String text, String font, int color);
	public abstract void setText(String text);
	public abstract void setFont(String font);
	public abstract void setColor(int color);

	public abstract void draw(int offsetx, int offsety, int rotx, int roty, int scalex, int scaley);
	public abstract int getHeight();
	public abstract int getWidth();
	public abstract void drawImmediate(String text,String font, int color, int offsetx, int offsety, int rotx, int roty, int scalex, int scaley);
	public abstract void drawImmediate(String text, Object font, int color, float posx,
			float posy, int rotx, int roty, int scalex, int scaley);	
}
