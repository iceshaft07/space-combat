package com.spacecombat;

public class PowerUp extends Component  
{
	public float nextChange;
	public float changeTime;
	public boolean canChange;
	
	public int type;
	public final int maxTypes = 10;
	
	public SimpleMovement sm;
	
	public PowerUp (SimplelMovement sm, int type, boolean canChange)
	{
		this.sm = sm;
		this.type = type;
		this.canChange = canChange;
	}
	
	public void update ()
	{
		if (this.canChange && Time.getTime() > nextChange)
		{
			change();
		}
	}
	
	public void change ()
	{
		nextChange = Time.getTime() + changeTime;		
		type++;
		
		if (type > maxTypes)
		{
			type = 0;
		}

		if (type == 0)
		{
			gameObject.playAnimation("PowerUp");
		}
		if (type == 1)
		{
			gameObject.playAnimation("Health");
		}
		if (type == 2)
		{
			gameObject.playAnimation("Missile");
		}
	}
}
