package com.spacecombat;

public class WeaponController extends Component {
	public Weapon weapon;
	
	public WeaponController (Weapon weapon)
	{
		this.weapon = weapon;
	}

	@Override
	public void collide(final Collision collision) {
		if (!collision.getWhatIHit().hasTag(new String [] {"PowerUp"})) {
			
			final PowerUp powerUp = (PowerUp) collision.getWhatIHit().getComponent(PowerUp.class);					
			
			if (powerUp != null)
			{
				if (powerUp.getType() == 0);
			}
			
			if (animation != null)
			{
				if (this.health <= 0 && !(animation.getName().equals("death"))) {
					final GraphicAnimation death = this.gameObject
							.playAnimation("death");
					this.gameObject.destroyAfter((long) death.getDuration());

					this.gameObject.removeComponent(AIScript.class);
				}
			}
		}
	}
}
