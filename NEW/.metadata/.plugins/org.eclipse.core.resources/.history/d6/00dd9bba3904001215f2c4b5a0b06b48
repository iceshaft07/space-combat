package com.spacecombat;

public class Tags {
	
	public static boolean compareTags (int value, int compareValue)
	{
		return (value & compareValue) == compareValue;
	}

	public static boolean compareTagsAtLeastOne (int value, int ... compareValues)
	{
		for (int x = 0; x < compareValues.length; x++)
		{
			if ((value & compareValues[x]) == compareValues[x])
			{
				return true;
			}
		}
		return false;
	}
	
	public static int player = 1 << 0;
	public static int enemy = 1 << 1;
	public static int shot = 1 << 2;
	public static int powerup = 1 << 3;
	public static int node = 1 << 4;
	public static int topOfScreen = 1 << 5;
	public static int dying = 1 << 6;
}
