package com.spacecombat;

public class PlayerInput extends Component implements ClickListener
{
	public PlayerInput ()
	{
		Input.subscribeListener(this);
	}
	
	@Override
	public void onClick() 
	{
		if (this.gameObject == null)
		{
			return;
		}
		this.gameObject.transform.position.x = Input.getX();
		this.gameObject.transform.position.y = Input.getY();
	}
}
