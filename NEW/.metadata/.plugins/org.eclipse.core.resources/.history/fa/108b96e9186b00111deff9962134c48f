package com.spacecombat;

public class PowerUp extends Component  
{
	public float nextChange;
	public float changeTime;
	public boolean canChange;
	
	public int type;
	public final int maxTypes = 10;
	
	public PowerUp (int type, boolean canChange)
	{
		this.type = type;
		this.canChange = canChange;
	}
	
	public void update ()
	{
		if (this.canChange && Time.getTime() > nextChange)
		{
			change();
		}
	}
	
	public void change ()
	{
		nextChange = Time.getTime() + changeTime;		
		type++;
		
		if (type > maxTypes)
		{
			type = 0;
		}

		
		gameObject.playAnimation(type.toString());
	}
}
