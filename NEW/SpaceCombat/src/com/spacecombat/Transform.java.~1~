package com.nea.nehe.lesson06;

public class Transform 
{
	private int xPos;
	private int yPos;
	private int zPos;
	
	private int xRot;
	private int yRot;
	private int zRot;
	
	private int xScale;
	private int yScale;
	private int zScale;
	
	public Transform ()
	{
		xPos = 0;
		yPos = 0;
		zPos = 0;
		
		xRot = 0;
		yRot = 0;
		zRot = 0;
		
		xScale = 1;
		yScale = 1;
		zScale = 1;
	}
}
